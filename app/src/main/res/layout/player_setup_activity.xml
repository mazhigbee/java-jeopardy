<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/player_header"
        android:text="Players: "
        android:textColor="@color/md_black_1000"
        android:textSize="24sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/player_setup_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/player_setup_add"
        app:layout_constraintTop_toBottomOf="@+id/player_header" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/player_setup_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/player_setup_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mazlinhigbee.jeopardyapp.Views.UserPickerDialog
        android:id="@+id/player_setup_userpicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </com.mazlinhigbee.jeopardyapp.Views.UserPickerDialog>

</androidx.constraintlayout.widget.ConstraintLayout>